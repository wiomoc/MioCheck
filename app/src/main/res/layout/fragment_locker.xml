<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/locker_available_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textSize="45sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="4" />
    <TextView
            android:text="@string/locker_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_available_label" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/locker_available_txt"/>

    <TextView
            tools:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="45sp"
            android:textStyle="bold"
            android:id="@+id/locker_account_credit_txt"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/label_available_label"/>
    <TextView
            android:text="@string/locker_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locker_account_credit_label" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/locker_account_credit_txt"/>
    <Button
            android:text="@string/locker_add"
            android:layout_width="100dp"
            android:textSize="30sp"
            android:layout_height="wrap_content"
            android:id="@+id/locker_add_button" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/locker_account_credit_label"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp"/>
    <Button
            android:text="@string/locker_take"
            android:textSize="30sp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/locker_take_button" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/locker_account_credit_label"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"/>

    <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/locker_history_chart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/locker_take_button"
            tools:layout_editor_absoluteX="-16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
